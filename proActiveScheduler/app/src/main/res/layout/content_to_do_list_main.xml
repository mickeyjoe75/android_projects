<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ToDoListMainActivity"
    tools:showIn="@layout/app_bar_to_do_list_main">


    <TextView
        android:id="@+id/homeHeadingTextViewId"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/heading_home_text"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="8dp" />


    <TextView
        android:id="@+id/dateTextId"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/dateTextId"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadingTextViewId"
        tools:layout_editor_absoluteX="8dp" />



</android.support.constraint.ConstraintLayout>