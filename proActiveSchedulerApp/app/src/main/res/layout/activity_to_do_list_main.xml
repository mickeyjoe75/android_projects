<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToDoListMainActivity">

    <TextView
        android:id="@+id/homeHeadingTextViewId"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/heading_home_text"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="8dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/dateTextId"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/dateTextId"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/homeHeadingTextViewId"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>